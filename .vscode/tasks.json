{
    "tasks": [
        {
            "type": "shell",
            "label": "make RGMEDD5",
            "command": "/usr/bin/make",
            "args": [
                "-f",
                "${workspaceFolder}/Makefile",
                "RGMEDD5",
                "CFLAGS='-O0 -g'",
                "LDFLAGS='-O0 -g'",
                "-j10"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build active file",
            "command": "/usr/lib64/ccache/g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "C/C++: clang build active file",
            "command": "/usr/lib64/ccache/clang",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ],
    "version": "2.0.0"
}